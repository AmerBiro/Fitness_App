<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog"
    android:padding="30dp"
    android:gravity="center"
    >

    <TextView
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_alert_dialog"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_text"
        style="@style/sub_title"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />


    <EditText
        android:id="@+id/id_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/example"
        style="@style/field"
        android:textSize="20sp"
        android:textColorHint="@color/ColorLightText"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:ems="12"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/id_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="14sp"
            style="@style/button"
            android:background="@drawable/list_programs"
            android:textAllCaps="false"

            />

        <Button
            android:id="@+id/id_send_a_link"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/send_a_link"
            style="@style/button"
            android:textSize="14sp"
            android:background="@drawable/list_programs"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

</LinearLayout>