<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_program_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".program.EditProgramView">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                style="@style/current_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_program_title" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_placeholder"
                android:backgroundTint="@color/ColorLightText"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/placeholder_image" />
            </androidx.cardview.widget.CardView>


            <EditText
                android:id="@+id/program_name"
                style="@style/current_item_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="@string/programs_name" />


            <EditText
                android:id="@+id/coatch_name"
                style="@style/current_item_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Coatch name" />


            <EditText
                android:id="@+id/program_fitness_center"
                style="@style/current_item_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Fitness center" />

            <EditText
                android:id="@+id/program_days"
                style="@style/current_item_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Total number of days"
                android:inputType="number" />

            <EditText
                android:id="@+id/program_exercises"
                style="@style/current_item_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Total number of exercises"
                android:inputType="number" />


            <EditText
                android:id="@+id/program_start_date"
                style="@style/current_item_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Start date"
                android:inputType="date" />

            <EditText
                android:id="@+id/program_end_date"
                style="@style/current_item_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="End data"
                android:inputType="date" />


            <Button
                android:id="@+id/edit"
                style="@style/button_wide_main_pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/about_program_edit" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>