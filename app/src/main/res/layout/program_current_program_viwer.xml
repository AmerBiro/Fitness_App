<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_program_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".program.CurrentProgramViwer">

    <TextView
        android:id="@+id/textView"
        style="@style/create_program_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_program_title" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_placeholder"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/ColorLightText"
                >

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/placeholder_image" />
            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/create_program_name"
                    style="@style/create_program_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:hint="@string/Program_name_example" />



                <EditText
                    android:id="@+id/create_program_coatch_name"
                    style="@style/create_program_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/coatch_name_example" />


                <EditText
                    android:id="@+id/create_program_fitness_center"
                    style="@style/create_program_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/fitness_center_example" />

                <EditText
                    android:id="@+id/create_program_days"
                    style="@style/create_program_field_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/x_days_example"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/create_program_exercises"
                    style="@style/create_program_field_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/x_exercises_example"
                    android:inputType="number" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/create_program_start_date"
                        style="@style/create_program_field_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="39dp"
                        android:hint="@string/start_date_example" />

                    <TextView
                        android:id="@+id/create_program_end_date"
                        style="@style/create_program_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/end_date_example" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/create_program"
                style="@style/button_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/about_program_edit" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>