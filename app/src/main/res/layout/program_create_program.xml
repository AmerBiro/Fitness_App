<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".program.CreateProgramView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_program_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    >

    <TextView
        android:id="@+id/textView"
        style="@style/create_program_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_program"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_placeholder"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/ColorLightText"
                >

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/placeholder_image" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/select_image"
                style="@style/button_wide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_select_image"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/create_program_name"
                    style="@style/create_program_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/Program_name"
                    />


                <EditText
                    android:id="@+id/create_program_coatch_name"
                    style="@style/create_program_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/coatch_name"
                    />


                <EditText
                    android:id="@+id/create_program_fitness_center"
                    style="@style/create_program_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/fitness_center"
                    />


                <EditText
                    android:id="@+id/create_program_days"
                    style="@style/create_program_field_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/x_days"
                    android:inputType="number"
                    />


                <EditText
                    android:id="@+id/create_program_exercises"
                    style="@style/create_program_field_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/x_exercises"
                    android:inputType="number"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/create_program_start_date"
                        style="@style/create_program_field_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/start_date_create_program"
                        android:layout_marginRight="39dp"
                        />

                    <TextView
                        android:id="@+id/create_program_end_date"
                        style="@style/create_program_field_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/end_date_create_program"
                        />
                </LinearLayout>

            </LinearLayout>

                <Button
                    android:id="@+id/create_program"
                    style="@style/button_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/create_program_button"
                    />


        </LinearLayout>
    </ScrollView>


</LinearLayout>