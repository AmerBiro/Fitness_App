<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/day_list_single_item"
    android:padding="10dp"
    android:gravity="center"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/day_list_single_item_day_exercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_list_single_item_day_exercise"
        style="@style/sub_title"

        />

    <TextView
        android:id="@+id/day_list_single_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_list_single_item_name"
        style="@style/button_wide"
        />

</LinearLayout>