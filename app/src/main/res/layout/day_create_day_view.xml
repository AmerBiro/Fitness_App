<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/day_list_create_day_view"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    >

    <EditText
        android:id="@+id/create_day_day_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_day_number"
        style="@style/create_day_field_number"
        />

    <EditText
        android:id="@+id/create_day_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_day_name"
        style="@style/create_day_field_"
        />

    <EditText
        android:id="@+id/create_day_number_of_exercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_day_exercises_number"
        style="@style/create_day_field_number"
        />


    <Button
        android:id="@+id/create_day_add_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/button_medium"
        android:text="@string/day_add_day"
        android:layout_marginTop="10dp"
        />


</LinearLayout>