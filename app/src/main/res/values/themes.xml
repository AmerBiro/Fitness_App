<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Make statusbar tranparent. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    ///////////////////////////// Title ////////////////////////////////////////////

    <style name="app_title">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 36sp </item>
        <item name="fontFamily"> @font/crimson_text</item>
        <item name="android:layout_marginBottom">150dp</item>
    </style>


    <style name="status">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 16sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="title_main_pages">
        <item name="android:textSize" > 30sp </item>
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="sub_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" > 24sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    ///////////////////////////// Fields ////////////////////////////////////////////

    <style name="field">
        <item name="android:textColorHint">@color/ColorLightText</item>
        <item name="android:textColor">@color/ColorLightText</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:inputType">text</item>
        <item name="android:ems">12</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <style name="field_sub_field">
        <item name="android:textColorHint">@color/ColorLightText</item>
        <item name="android:textColor">@color/ColorLightText</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:inputType">text</item>
        <item name="android:ems">12</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    ///////////////////////////// Buttons ////////////////////////////////////////////

    <style name="button_small_main_pages">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 18sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/button_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="button_medium_main_pages">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 18sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/button_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="button_wide_main_pages">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 18sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_wide</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="forgot_password">
        <item name="android:textColor">@color/ColorAccent</item>
        <item name="android:textSize" > 16sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:gravity"> center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="button_gender">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="buttonTint">@color/ColorPrimary</item>
    </style>

    ///////////////////////////// lists ////////////////////////////////////////////

    <style name="title_lists">
        <item name="android:textSize" > 24sp </item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>


    /////////////////////////////////////////////////////////////////////////

    <style name="current_item_title">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 30sp </item>
        <item name="fontFamily"> @font/crimson_text</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="current_item_field">
        <item name="android:textColor">@color/ColorLightText</item>
        <item name="android:textColorHint">@color/ColorLightText</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:ems">14</item>
    </style>

    ///////////////////////////// single items ////////////////////////////////////////////

    <style name="single_item">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>


    <style name="single_item_without">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" > 16sp </item>
        <item name="fontFamily"> @font/work_sans</item>
        <item name="android:layout_gravity">center</item>
    </style>


    /////////////////////////////////////////////////////////////////////////

    <style name="linear_layout_body">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">170dp</item>
    </style>

    <style name="alert_dialog_create_account">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="alert_dialog_title">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 30sp </item>
        <item name="fontFamily"> @font/crimson_text</item>
    </style>

    <style name="alert_dialog_sub_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" > 16sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="alert_dialog_sub_title_create_account">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="alert_dialog_field">
        <item name="android:textColor">@color/ColorLightText</item>
        <item name="android:textColorHint">@color/ColorLightText</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="alert_dialog_button">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 14sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>


    <style name="alert_dialog_animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/alert_dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/alert_dialog_fade_out</item>
    </style>


</resources>