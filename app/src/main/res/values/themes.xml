<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Make statusbar tranparent. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="title">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 36sp </item>
        <item name="fontFamily"> @font/crimson_text</item>
    </style>

    <style name="field">
        <item name="android:textColor">@color/ColorLightText</item>
        <item name="android:textSize" > 24sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="sub_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" > 24sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="status">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 16sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="programs_list_recyclerview_title">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="programs_list_recyclerview_sub_title">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 16sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="alert_dialog_create_account">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="alert_dialog_title">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 30sp </item>
        <item name="fontFamily"> @font/crimson_text</item>
    </style>

    <style name="alert_dialog_sub_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" > 16sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="alert_dialog_sub_title_create_account">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="alert_dialog_field">
        <item name="android:textColor">@color/ColorLightText</item>
        <item name="android:textColorHint">@color/ColorLightText</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="alert_dialog_button">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 14sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="forgot_password">
        <item name="android:textColor">@color/ColorAccent</item>
        <item name="android:textSize" > 16sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>



    <style name="alert_dialog_animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/alert_dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/alert_dialog_fade_out</item>
    </style>


    <style name="program_title">
        <item name="android:textColor">@color/ColorPrimary</item>
        <item name="android:textSize" > 36sp </item>
        <item name="fontFamily"> @font/crimson_text</item>
    </style>

    <style name="program_sub_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

    <style name="program_field">
        <item name="android:textColor">@color/ColorLightText</item>
        <item name="android:textColorHint">@color/ColorLightText</item>
        <item name="android:textSize" > 20sp </item>
        <item name="fontFamily"> @font/work_sans</item>
    </style>

</resources>